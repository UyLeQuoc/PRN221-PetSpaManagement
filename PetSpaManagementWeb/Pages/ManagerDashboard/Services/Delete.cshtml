@page
@model PetSpaManagementWeb.Pages.ManagerDashboard.Services.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Services</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Duration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Weight)
        </dt>
        <dd class="col-sm-10">
            @{
                var fromWeight = Model.Service.Weight.FromWeight;
                var toWeight = Model.Service.Weight.ToWeight;
                string displayWeight = $"{fromWeight} - {toWeight}kg";
            }
            @Html.DisplayFor(modelItem => displayWeight)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Service.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>