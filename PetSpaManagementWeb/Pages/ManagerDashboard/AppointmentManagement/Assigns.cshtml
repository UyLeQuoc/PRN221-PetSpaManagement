@page
@model PetSpaManagementWeb.Pages.ManagerDashboard.AppointmentManagement.AssignModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit Appointment</h2>
<form method="post">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            <div class="form-group">
                <label asp-for="Appointment.PetSitterId" class="control-label"></label>
                <select asp-for="Appointment.PetSitterId" class="form-control" asp-items="ViewBag.PetSitter"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Status" class="control-label"></label>
                <select asp-for="Appointment.Status" class="form-control">
                    <option value="PENDING">PENDING</option>
                    <option value="ASSIGNED">ASSIGNED</option>
                    <option value="COMPLETED">COMPLETED</option>
                    <option value="CANCELLED">CANCELLED</option>
                    <option value="ABSENT">ABSENT</option>
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
