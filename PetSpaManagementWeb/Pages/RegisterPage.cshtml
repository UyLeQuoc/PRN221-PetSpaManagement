@page
@model PetSpaManagementWeb.Pages.RegisterPageModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="card login-form">
        <div class="card-body">
            <h3>Register to PetSitting</h3>
            <div class="card-text">
                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @Model.ErrorMessage
                    </div>
                }
                <form method="post">
                    <div class="form-group">
                        <label asp-for="User.Email">Email address</label>
                        <input asp-for="User.Email" class="form-control form-control-sm" id="exampleInputEmail" aria-describedby="emailHelp">
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Name">Name</label>
                        <input asp-for="User.Name" class="form-control form-control-sm" id="exampleInputName" aria-describedby="nameHelp">
                        <span asp-validation-for="User.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Password">Password</label>
                        <input asp-for="User.Password" type="password" class="form-control form-control-sm" id="exampleInputPassword1">
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Register</button>

                    <div class="sign-up">
                        Already have an account? <a asp-page="/Login">Sign in</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
