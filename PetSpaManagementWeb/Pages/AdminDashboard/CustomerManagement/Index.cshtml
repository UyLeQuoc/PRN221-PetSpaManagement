@page
@model PetSpaManagementWeb.Pages.AdminDashboard.CustomerManagement.IndexModel
@{
    ViewData["Title"] = "Customer Management";
}

<h1>Customer Management</h1>

<a class="btn btn-primary" asp-page="/AdminDashboard/Create">Create New Customer</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>
                    <a class="btn btn-secondary" asp-page="/AdminDashboard/CustomerManagement/Edit" asp-route-id="@customer.Id">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@customer.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
