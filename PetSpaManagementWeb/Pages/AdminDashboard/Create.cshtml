@page "{role?}"
@model PetSpaManagementWeb.Pages.AdminDashboard.CreateModel
@{
    ViewData["Title"] = "Create User";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<h1>Create User</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Customer.Name" class="control-label"></label>
        <input asp-for="Customer.Name" class="form-control" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Email" class="control-label"></label>
        <input asp-for="Customer.Email" class="form-control" />
        <span asp-validation-for="Customer.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.Password" class="control-label"></label>
        <input asp-for="Customer.Password" type="password" class="form-control" />
        <span asp-validation-for="Customer.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.RoleId" class="control-label"></label>
        <select asp-for="Customer.RoleId" class="form-control" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
        <span asp-validation-for="Customer.RoleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Customer.PictureUrl" class="control-label"></label>
        <input asp-for="Customer.PictureUrl" class="form-control" />
        <span asp-validation-for="Customer.PictureUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
