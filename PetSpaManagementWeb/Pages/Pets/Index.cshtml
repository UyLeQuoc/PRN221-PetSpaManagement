@page
@model PetSpaManagementWeb.Pages.Pets.IndexModel
@{
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<p>
    <form method="get" asp-page="./Create">
        <button type="submit" class="btn btn-primary">Create new pet</button>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets[0].UserId)
            </th>

            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



