@page
@model PetSpaManagementWeb.Pages.CustomerDashboard.Payments.ResultModel
@{
}

<div class="d-flex flex-column justify-content-center">

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger fade show mx-auto" role="alert" style="max-width: auto;">
            <i class="bi bi-exclamation-circle-fill"></i>
            @TempData["ErrorMessage"]
        </div>
        <br />
        <div class="mt-2">
            XIN VUI LÒNG THỬ LẠI
        </div>
    }
    @if (TempData["PaymentSuccess"] != null)
    {
        <div class="alert alert-success fade show mx-auto" role="alert" style="max-width: auto;">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["PaymentSuccess"]
        </div>
    }
    <div class="text-center">
        <form method="get" asp-page="./Index">
            <button type="submit" class="btn btn-primary mt-2">Back to history</button>
        </form>
    </div>
</div>
